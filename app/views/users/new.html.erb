<h1>Create A New User</h1>

<%= form_tag login_path do %>
 <%= label_tag :name %>
 <%= text_field_tag :name %>
 <%= label_tag :password %>
 <%= password_field_tag :password %>
 <%= label_tag :password_confirmation %>
 <%= password_field_tag :password_confirmation %>

 <%= submit_tag "Create User"%>
<% end %>
